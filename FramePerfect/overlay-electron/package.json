{
  "name": "frameperfect-overlay",
  "version": "0.2.0",
  "private": true,
  "description": "FramePerfect HUD overlay with recording/playback and ViGEm injection",
  "author": "FramePerfect",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:helpers": "dotnet publish tools/win/FpPad/FpPad.csproj -c Release -r win-x64 --self-contained true /p:PublishSingleFile=true /p:IncludeNativeLibrariesForSelfExtract=true && dotnet publish tools/win/FpXRec/FpXRec.csproj -c Release -r win-x64 --self-contained true /p:PublishSingleFile=true /p:IncludeNativeLibrariesForSelfExtract=true",
    "dist:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false&& electron-builder --win nsis",
    "pack:portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false&& electron-builder --win portable"
  },
  "dependencies": {
    "node-global-key-listener": "0.3.0"
  },
  "devDependencies": {
    "electron": "30.x",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.frameperfect.overlay",
    "productName": "FramePerfect HUD",
    "asar": true,
    "asarUnpack": ["**/tools/win/**"],
    "files": [
      "**/*",
      "!**/node_modules/**/.cache/**"
    ],
    "extraResources": [
      { "from": "tools/win/FpPad/bin/Release/net8.0/win-x64/publish", "to": "tools/win/FpPad" },
      { "from": "tools/win/FpXRec/bin/Release/net8.0/win-x64/publish", "to": "tools/win/FpXRec" },
      { "from": "build/prereqs", "to": "prereqs" },
      { "from": "build/thirdparty/DS4Windows", "to": "thirdparty/DS4Windows" }
    ],
    "fileAssociations": [
      {
        "ext": "fpkeys",
        "name": "FramePerfect Keystrokes",
        "mimeType": "application/x-frameperfect-keys"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "protocols": [
        { "name": "FramePerfect", "schemes": ["frameperfect"] }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "artifactName": "FramePerfect-HUD-${version}-Setup.${ext}",
      "protocols": [
        { "name": "FramePerfect", "schemes": ["frameperfect"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "FramePerfect HUD",
      "include": "build/installer.nsh",
      "runAfterFinish": true
    }
  }
}
